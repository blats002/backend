    <profiles>
        <!-- tomcat embedded -->
        <!-- only for cdi tests, i.e. no ejb -->
        <!-- fails. needs different deployment. see http://www.hameister.org/ArquillianTomcatDependencyInjection.html -->
        <profile>
            <id>arquillian-tomcat-embedded-jetty-run</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <excludes>
                                <exclude>**/BasketTest.java</exclude>
                            </excludes>
                            <!-- as Surefire argLine is overwritten, JaCoCo agent
                                 must be included again -->
                            <argLine>-Darquillian.launch=tomcat-embedded ${jacoco.utAgentConfig}</argLine>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>${jettyVersion}</version>
                        <configuration>
                            <httpConnector>
                                <port>8080</port>
                            </httpConnector>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.tomcat.maven</groupId>
                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <version>2.2</version>
                        <configuration>
                            <port>9090</port>
                            <path>/</path>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.jelastic</groupId>
                        <artifactId>jelastic-maven-plugin</artifactId>
                        <version>1.8.4</version>
                        <configuration>
                            <api_hoster></api_hoster>
                            <email></email>
                            <password></password>
                            <environment></environment>
                            <!--<context>[specify the context if you need it]</context>-->
                            <!--<comment>[insert comment if you need it]</comment>-->
                        </configuration>
                    </plugin>

                </plugins>
            </build>

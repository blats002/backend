            <id>mulesoft-releases</id>
            <name>MuleSoft Releases Repository</name>
            <url>https://crossorigin.divroll.space/https://repository-master.mulesoft.org/releases/</url>
        </repository>
        <repository>
            <id>atlassian-public</id>
            <url>https://crossorigin.divroll.space/https://maven.atlassian.com/repository/public</url>
            <snapshots>

    <repositories>
        <repository>
            <id>oss-jfrog-artifactory-snapshots</id>
            <name>oss-jfrog-artifactory-snapshots</name>
            <url>https://crossorigin.divroll.space/https://oss.jfrog.org/artifactory/oss-snapshot-local</url>
        </repository>
        <repository>
            <id>maven-restlet</id>
            <name>Public online Restlet repository</name>
            <url>https://crossorigin.divroll.space/http://maven.restlet.com</url>
        </repository>
        <!-- Needed by ApiSpark due to RAML dependency-->
